<UserControl x:Class="SAM.Analytical.UI.WPF.CreateCaseByFinShadeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAM.Analytical.UI.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" ItemsSource="{Binding Items}" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Glass Part&#10;Only" Binding="{Binding GlassPartOnly, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="*" />
                <DataGridTextColumn Header="Left Fin&#10;Depth" Binding="{Binding LeftFinDepth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="*" />
                <DataGridTextColumn Header="Left Fin&#10;Front Offset" Binding="{Binding LeftFinFrontOffset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="*" />
                <DataGridTextColumn Header="Left Fin&#10;Offset" Binding="{Binding LeftFinOffset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="*" />
                <DataGridTextColumn Header="Overhang&#10;Depth" Binding="{Binding OverhangDepth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="*" />
                <DataGridTextColumn Header="Overhang&#10;Front Offset" Binding="{Binding OverhangFrontOffset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="*" />
                <DataGridTextColumn Header="Overhang&#10;Vertical Offset" Binding="{Binding OverhangVerticalOffset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="*" />
                <DataGridTextColumn Header="Right Fin&#10;Front Offset" Binding="{Binding RightFinFrontOffset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="*" />
                <DataGridTextColumn Header="Right Fin&#10;Offset" Binding="{Binding RightFinOffset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="1" x:Name="button_Selection" Content="Selection"  Margin="0,10,10,10" HorizontalAlignment="Right" Width="70" Click="button_Selection_Click" IsEnabled="True"/>
    </Grid>
</UserControl>
