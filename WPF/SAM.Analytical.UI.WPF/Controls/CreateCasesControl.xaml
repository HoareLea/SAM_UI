<UserControl x:Class="SAM.Analytical.UI.WPF.CreateCasesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAM.Analytical.UI.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="190"/>
        </Grid.ColumnDefinitions>
        
        <ListBox x:Name="ListBox_Cases" Grid.Column="0" Margin="5,5,5,5"/>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" x:Name="Button_Up" Content="▲" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="140" Margin="5,5,5,5" Click="Button_Up_Click"/>
            <Button Grid.Row="1" x:Name="Button_Down" Content="▼" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="140" Margin="5,5,5,5" Click="Button_Down_Click"/>
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical" Grid.Row="0" VerticalAlignment="Top">
                <Button x:Name="Button_CaseByWindowSize" Content="Add window size case" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,5,5,5" Click="Button_CaseByWindowSize_Click"/>
                <Button x:Name="Button_CaseByApertureConstruction" Content="Add aperture construction case" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,5,5,5" Click="Button_CaseByApertureConstruction_Click"/>
                <Button x:Name="Button_CaseByWeatherData" Content="Add weather data case" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,5,5,5" Click="Button_CaseByWeatherData_Click"/>
                <Button x:Name="Button_CaseByFinShade" Content="Add shade case" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,5,5,5" Click="Button_CaseByFinShade_Click" IsEnabled="True"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Row="1" VerticalAlignment="Bottom">
                <Button x:Name="Button_Clear" Content="Clear" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,5,5,5" Click="Button_Clear_Click"/>
                <Button x:Name="Button_Load" Content="Load" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,5,5,5" Click="Button_Load_Click"/>
                <Button x:Name="Button_Save" Content="Save" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,5,5,5" Click="Button_Save_Click"/>
            </StackPanel>

        </Grid>
        

        
        

    </Grid>
</UserControl>
