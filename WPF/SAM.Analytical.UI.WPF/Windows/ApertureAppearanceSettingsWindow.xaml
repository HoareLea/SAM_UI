<Window x:Class="SAM.Analytical.UI.WPF.ApertureAppearanceSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAM.Analytical.UI.WPF"
        mc:Ignorable="d"
        Title="Aperture Visibility" Height="260" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <local:ApertureAppearanceSettingsControl x:Name="apertureAppearanceSettingsControl" Grid.Row="0" Margin="0,0,-0.4,0" Grid.ColumnSpan="2"></local:ApertureAppearanceSettingsControl>
        <Button x:Name="button_Cancel" IsCancel="True" Content="Cancel" Grid.Row="1" Margin="0,10,9.6,10" Width="70" HorizontalAlignment="Right" Grid.Column="1" Click="button_Cancel_Click"></Button>
        <Button x:Name="button_OK" Content="OK" Grid.Row="1" Margin="0,10,84.6,10" HorizontalAlignment="Right" Width="70" Grid.Column="1" Click="button_OK_Click" />
    </Grid>
</Window>
