<Window x:Class="SAM.Analytical.UI.WPF.MapInternalConditionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAM.Analytical.UI.WPF"
        mc:Ignorable="d"
        Title="Map InternalConditions" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="90*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <local:MapInternalConditionsControl x:Name="mapInternalConditionsControl" Grid.Row="0" Margin="0,0,-0.4,0" Grid.ColumnSpan="2"></local:MapInternalConditionsControl>
        <Button x:Name="button_Cancel" IsCancel="True" Content="Cancel" Grid.Row="1" Margin="0,10,9.6,10" Width="70" HorizontalAlignment="Right" Click="button_Cancel_Click" Grid.Column="1"></Button>
        <Button x:Name="button_OK" Content="OK" Grid.Row="1" Margin="0,10,84.6,10" Click="button_OK_Click" HorizontalAlignment="Right" Width="70" Grid.Column="1" />
    </Grid>
</Window>
