<UserControl x:Class="SAM.Core.UI.WPF.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAM.Core.UI.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">
    <Grid>
        <TextBox x:Name="TextBox_Text" Margin="5, 5, 5, 0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="20" TextChanged="TextBox_Text_TextChanged"/>
        <ListBox x:Name="ListBox_Main" Margin="5,30,5,5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" SelectionChanged="ListBox_Main_SelectionChanged" />
    </Grid>
</UserControl>
