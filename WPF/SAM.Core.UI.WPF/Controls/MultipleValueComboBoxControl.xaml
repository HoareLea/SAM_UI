<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAM.Core.UI.WPF"
             xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" x:Class="SAM.Core.UI.WPF.MultipleValueComboBoxControl"
             mc:Ignorable="d" d:DesignWidth="120" Height="22">
    <Grid>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsEditable="True" SelectionChanged="comboBox_SelectionChanged" PreviewKeyUp="comboBox_PreviewKeyUp" Margin="0,0,0,0.4" />
    </Grid>
</UserControl>
