<Window x:Class="SAM.Core.UI.WPF.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAM.Core.UI.WPF"
        mc:Ignorable="d"
        Title="Filter" Height="500" Width="400">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <local:FilterControl x:Name="filterControl"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="0" Margin="0,0,0,0"/>
        <Button x:Name="button_Cancel" IsCancel="True" Content="Cancel" Grid.Row="1" Margin="0,10,10,10" Width="70" HorizontalAlignment="Right" Click="button_Cancel_Click"></Button>
        <Button x:Name="button_OK" Content="OK" Grid.Row="1" Margin="0,10,85,10" HorizontalAlignment="Right" Width="70" Click="button_OK_Click" />
    </Grid>
</Window>
