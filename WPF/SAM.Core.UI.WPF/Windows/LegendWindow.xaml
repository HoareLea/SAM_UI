<Window x:Class="SAM.Core.UI.WPF.LegendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAM.Core.UI.WPF"
        mc:Ignorable="d"
        Title="Legend" Height="400" Width="300">
    <Grid>
        <local:LegendControl x:Name="legendControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0, 0,40"/>
        <Button x:Name="button_Cancel" Content="Cancel" IsCancel="True" HorizontalAlignment="Right" Margin="0,0,9.6,10.4" VerticalAlignment="Bottom" Width="75" Click="button_Cancel_Click"/>
        <Button x:Name="button_OK" Content="OK" HorizontalAlignment="Right" Margin="0,0,89.6,10.4" VerticalAlignment="Bottom" Width="75" Click="button_OK_Click"/>

    </Grid>
</Window>
