<Window x:Class="SAM.Core.UI.WPF.TextMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAM.Core.UI.WPF"
        mc:Ignorable="d"
        Title="TextMapWindow" Height="510" Width="460">
    <Grid>
        <local:TextMapControl x:Name="textMapControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0, 0,40"/>
        <Button x:Name="button_Close" Content="Close" IsCancel="True" HorizontalAlignment="Right" Margin="0,0,9.6,10.4" VerticalAlignment="Bottom" Width="75" Click="button_Close_Click"/>
    </Grid>
</Window>
