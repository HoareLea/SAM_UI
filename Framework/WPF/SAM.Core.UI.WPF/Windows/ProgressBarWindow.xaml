<Window x:Class="SAM.Core.UI.WPF.ProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAM.Core.UI.WPF"
        mc:Ignorable="d"
        Title="Loading" Height="120" Width="300" Topmost="True" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Stretch" Height="21" Margin="10,41,3.6,0" VerticalAlignment="Top" IsIndeterminate="True"/>
        <Label x:Name="label" Content="Waiting..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
