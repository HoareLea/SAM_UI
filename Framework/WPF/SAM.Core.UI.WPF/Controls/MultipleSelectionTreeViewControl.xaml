<UserControl x:Class="SAM.Core.UI.WPF.MultipleSelectionTreeViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAM.Core.UI.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TreeView x:Name="TreeView_Main" Margin="5,5,5,5"/>
        <Button x:Name="Button_SelectAll" Grid.Row="1" Content="Select All" Margin="5,5,5,5" HorizontalAlignment="Left" Width="70" Click="Button_SelectAll_Click"/>
        <Button x:Name="Button_SelectNone" Grid.Row="1" Content="Select None" Margin="80,5,5,5" HorizontalAlignment="Left" Width="70" Click="Button_SelectNone_Click"/>
    </Grid>
</UserControl>
